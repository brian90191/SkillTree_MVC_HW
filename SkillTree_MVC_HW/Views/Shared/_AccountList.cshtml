@model IEnumerable<SkillTree_MVC_HW.Models.ViewModels.AccountViewModel>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    #
                </th>
                <th>
                    類別
                </th>
                <th>
                    日期
                </th>
                <th>
                    金額
                </th>
            </tr>

            @{ 
                int itemIndex = 1;
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @(itemIndex++)
                    </td>
                    <td>
                        @item.Type
                    </td>
                    <td>
                        @item.CreateTime.ToString("yyyy-MM-dd")
                    </td>
                    <td>
                        @item.Total.ToString("#,0")
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


